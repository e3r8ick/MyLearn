<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 
 
 <hibernate-mapping>
     
     <union-subclass name="Entidades_de_Transferencia_de_Informacion.Comentario" table="Comentario" extends="Entidades_de_Transferencia_de_Informacion.Mensaje">
        

        <property name="adjunto" column="adjunto" type="string"/>
        <property name="nombreArchivo" column="nombreArchivo" type="string"/>
        <property name="respuesta" column="respuesta" type="int"/>
         
     </union-subclass>
     
 </hibernate-mapping>